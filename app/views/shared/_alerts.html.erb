<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "My Picture Site", sticky: false, image: :progress ) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:errpr], title: "My Picture Site", sticky: false, image: :error ) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "My Picture Site", sticky: false, image: :success ) %>
<% end %>