<!DOCTYPE html>
<html>
  <head>
    <title>PictureApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= image_tag(
        'RedRose2.svg.png',
        id: 'background-img-rose'
      )
      %>
    <%= render 'shared/nav' %>

    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>
    <%= render 'shared/alerts' %>
  </body>
</html>
