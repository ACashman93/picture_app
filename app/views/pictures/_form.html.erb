<%= form_for(pic) do |f| %>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
       <%= f.label "Image:", class: "sr-only" %>
       <%= f.file_field :image, class: "form-control-file form-control-lg btn-info" %>
      </div>

      <div class="form-group">
       <%= f.label "Date:", class: "sr-only" %>
       <%= f.date_field :date, class: "btn" %>
      </div>

      <div class="form-group">
       <%= f.submit "Add new picture", class: "btn btn-outline-secondary btn-lg" %>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="form-group">
       <%= f.label "Description:" %>
       <%= f.text_area :description, class: 'form-control', rows: 5 %>
      </div>
    </div>
  </div>
<% end %>