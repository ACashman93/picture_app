<%= form_for(pic) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label class="btn btn-outline-secondary btn-lg">
          Choose file: <%= f.file_field :image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
       <%= f.label "Date:", class: "sr-only" %>
       <%= f.date_field :date, class: "btn" %>
      </div>

      <div class="form-group">
        <%= f.label "Category:", class: "sr-only" %>
        <%= f.collection_select(:type_id, Type.all, :id, :title,
                                {
                                  include_blank: true
                                },
                                class: "form-control"
                                )
        %>
      </div>

      <div class="form-group">
        <%= f.label "Description:" %>
        <%= f.text_area :description, class: 'form-control', rows: 5 %>
      </div>

      <div class="form-group">
       <%= f.submit "Add new picture", class: "btn btn-outline-secondary btn-lg" %>
      </div>
    </div>
  </div>
<% end %>