<div class="album text-muted">
  <div class="container portfolio-container">
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-6">
        <div class="card show-card" style="width: 100%">
          <%= link_to "Back", pictures_path, class: "btn btn-outline-dark btn-block btn-sm" %>
          <br>
          <p>
            <%= image_tag @pic.image, class: "card-img-top" %>
          </p>
          <div class="card-body">
            <p class="card-text">
              <%= @pic.description %>
            </p>
            <p>
              <%= @pic.date %>
            </p>
            <div class="row">
              <div class="col-md-6">
                <%= link_to 'Edit', edit_picture_path(@pic), class: "btn btn-outline-success btn-block" %>
              </div>
              <div class="col-md-6">
                <%= link_to 'Delete', @pic, method: :delete, data: { confirm: 'Are you sure that you want to delete this picture?'}, class: "btn btn-outline-danger btn-block" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>