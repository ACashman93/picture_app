<%= form_for(@type) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
       <%= f.label "Category:", class: "sr-only" %>
       <%= f.text_field :title, class: "form-control", placeholder: 'Category Name' %>
      </div>

      <div class="form-group">
       <%= f.submit "Add new category", class: "btn btn-outline-secondary btn-block" %>
      </div>
    </div>
  </div>
<% end %>